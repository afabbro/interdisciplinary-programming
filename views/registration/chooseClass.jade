include ../partials/head.jade
include ../partials/header.jade
include ../partials/footer.jade

doctype html5
html
  head
    +head()

  body.vanilla
    div.page-wrapper
      +header()

      section
        div.content-wrapper
          h1 Are you a Scientist or a Software Developer?

          form(method='post', action='newUser').pure-form.pure-form-stacked
            input(type='checkbox', name='scientist', checked=true, style='display:none')
            input(type='submit', value='Scientist').pure-button.pure-button-primary

          form(method='post', action='newUser').pure-form.pure-form-stacked
            input(type='checkbox', name='scientist', checked=false, style='display:none')
            input(type='submit', value='Developer').pure-button.pure-button-primary    

      +footer()

