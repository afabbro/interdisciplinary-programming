doctype html5
html

  head
    link(rel='stylesheet', href='static/style.css')
    include ../mixins/internalHeader.jade
    include ../mixins/footer.jade
    include ../mixins/splashTitle.jade

  body
    div.wrapper
      +splashTitle()
      +internalHeader('User Profile')

      h1 #{user.uName} Profile

      form(method='get', action='contactUser')
        button(value=user.uName, name='username') Contact #{user.uName}

      p= user.uName
      p= user.discipline
      p= user.language

      div.push

    +footer()
