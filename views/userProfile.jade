doctype html5
html

  head

  body
    h1 My Profile

    form(method='get', action='userMatches')
      input(type='submit', value='My Matches')

    form(method='get', action='userProfile')
      input(type='submit', value='My Profile')

    form(method='get', action='userSearch')
      input(type='submit', value='Search')

    form(method='post' action='recordUpdate')
      if scientist
        label What is your discipline?
        select(name='discipline')
          option Divination
          option Evokation
          option Necromancy

        label What language would you like to work in?
        select(name='language')
          option Haskell
          option Visual BASIC
          option Jade

      if developer
        label What languages are you comfortable with?
        select(name='language')
          option Haskell
          option Visual BASIC
          option Jade

        label What sciences interest you?
        select(name='discipline')
          option Divination
          option Evokation
          option Necromancy

      input(type='submit', value='Update Profile')