doctype html5
html

  head

  body
    h1 My Profile

    form(method='get', action='userMatches')
      input(type='submit', value='My Matches')

    form(method='get', action='userProfile')
      input(type='submit', value='My Profile')

    form(method='get', action='userSearch')
      input(type='submit', value='Search')

    form(method='post' action='recordUpdate')
      if scientist
        label What is your discipline?
        input(type='checkbox', name='discipline[]', value='Divination') Divination
        input(type='checkbox', name='discipline[]', value='Evokation') Evokation
        input(type='checkbox', name='discipline[]', value='Necromancy') Necromancy

        label What language would you like to work in?
        input(type='checkbox', name='language[]', value='Haskell') Haskell
        input(type='checkbox', name='language[]', value='Visual BASIC') Visual BASIC
        input(type='checkbox', name='language[]', value='Jade') Jade

      if developer
        label What languages are you comfortable with?
        input(type='checkbox', name='language[]', value='Haskell') Haskell
        input(type='checkbox', name='language[]', value='Visual BASIC') Visual BASIC
        input(type='checkbox', name='language[]', value='Jade') Jade

        label What sciences interest you?
        input(type='checkbox', name='discipline[]', value='Divination') Divination
        input(type='checkbox', name='discipline[]', value='Evokation') Evokation
        input(type='checkbox', name='discipline[]', value='Necromancy') Necromancy

      input(type='submit', value='Update Profile')