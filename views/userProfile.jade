doctype html5
html

  head

  body
    h1= user.Necromancy

    form(method='get', action='userMatches')
      input(type='submit', value='My Matches')

    form(method='get', action='userProfile')
      input(type='submit', value='My Profile')

    form(method='get', action='userSearch')
      input(type='submit', value='Search')

    form(method='post' action='recordUpdate')
      if user.scientist
        label What is your discipline?
        br
        input(type='checkbox', name='discipline[]', value='Divination')
        label Divination
        br
        input(type='checkbox', name='discipline[]', value='Evokation')
        label Evokation
        br
        input(type='checkbox', name='discipline[]', value='Necromancy', checked=user.Necromancy==true)
        label Necromancy
        br
        br

        label What language would you like to work in?
        br
        input(type='checkbox', name='language[]', value='Haskell')
        label Haskell
        br
        input(type='checkbox', name='language[]', value='Visual BASIC')
        label Visual BASIC
        br
        input(type='checkbox', name='language[]', value='Jade')
        label Jade
        br

      if user.developer
        label What languages are you comfortable with?
        br
        input(type='checkbox', name='language[]', value='Haskell')
        label Haskell
        br
        input(type='checkbox', name='language[]', value='Visual BASIC')
        label Visual BASIC
        br
        input(type='checkbox', name='language[]', value='Jade')
        label Jade
        br
        br

        label What sciences interest you?
        br
        input(type='checkbox', name='discipline[]', value='Divination')
        label Divination
        br
        input(type='checkbox', name='discipline[]', value='Evokation')
        label Evokation
        br
        input(type='checkbox', name='discipline[]', value='Necromancy')
        label Necromancy
        br

      input(type='submit', value='Update Profile')




