doctype html5
html

  head

  body
    h1 My Profile

    form(method='get', action='userMatches')
      button(value=0, name='page') My Matches

    form(method='get', action='userProfile')
      input(type='submit', value='My Profile')

    form(method='get', action='userSearch')
      input(type='submit', value='Search')

    form(method='post' action='recordUpdate')
      if user.scientist
        label What is your discipline?
        br
        - for(var i=0; i<disciplines.length; i++){
          //- var check = user.discipline.indexOf( #{disciplines[i]} ) == -1 ? false : true
          input(type='checkbox', name='discipline[]', value= #{disciplines[i]}, checked= true )
          br
          label disciplines[i]
          br
        - }
        br

        label What language would you like to work in?
        br
        - for(var i=0; i<languages.length; i++){
          //- var check = user.language.indexOf( #{languages[i]} ) == -1 ? false : true
          input(type='checkbox', name='language[]', value= #{languages[i]}, checked= true )
          br
          label languages[i]
          br
        - }
        br


      if user.developer
        label What languages are you comfortable with?
        br
        - for(var i=0; i<languages.length; i++){
          //- var check = user.language.indexOf( #{languages[i]} ) == -1 ? false : true
          input(type='checkbox', name='language[]', value= #{languages[i]}, checked= true )
          br
          label languages[i]
          br
        - }
        br

        label What sciences interest you?
        br
        - for(var i=0; i<disciplines.length; i++){
          //- var check = user.discipline.indexOf( #{disciplines[i]} ) == -1 ? false : true
          input(type='checkbox', name='discipline[]', value= #{disciplines[i]}, checked= true )
          br
          label disciplines[i]
          br
        - }
        br

      br
      label email
      input(type='email', name='email', value=user.email)

      input(type='submit', value='Update Profile')

    form(method='post', action='changePasswordForm')
      input(type='submit', value='Change Password')

    form(method='get', action='logout')
      input(type='submit', value='Logout')

    form(method='post', action='deleteProfile')
      input(type='submit', value='Delete My Profile')
