doctype html5
html

  head

  body
    form(method='get', action='userMatches')
      button(value=0, name='page') My Matches

    form(method='get', action='userProfile')
      input(type='submit', value='My Profile')

    form(method='get', action='userSearch')
      input(type='submit', value='Search')

    h1 Contact #{user.uName}
    form(method='post', action='sendEmail')
      input(type='text', name='_id', value=user._id, style='display:none')
      label Subject
      br
      input(type='text', name='subject')
      br
      label Body
      br
      textarea(cols=40, rows=10, name='body')
      br
      input(type='submit', value='Send Mail')

