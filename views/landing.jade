doctype html5
html
  head
    link(rel='stylesheet', href='/style.css')
    include mixins.jade

  body
    div.wrapper#landingWrapper
      +splashTitle()

      div.container
        div.leftBlock
          form(method='get', action='login')
            input(type='submit', value='Login').bigButton

          form(method='get', action='register')
            input(type='submit', value='Register').bigButton

        div.rightBlock
          p.splashText Adipisicing pour-over id cred placeat ethical, distillery Shoreditch Carles laborum incididunt PBR bitters wayfarers irony.

      -if(scientist)
        +userStub(scientist.uName, [], true, false, scientist.language, scientist.discipline)
      -if(developer)
        +userStub(developer.uName, [], false, true, developer.language, developer.discipline)

      div.push

    +footer()