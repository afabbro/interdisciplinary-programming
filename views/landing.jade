doctype html5
html
  head
    link(rel='stylesheet', href='/style.css')
    include mixins.jade

  body
    div.wrapper#landingWrapper
      h1.splashTitle Interdisciplinary Programming

      div.container
        div.leftBlock
          form(method='get', action='login')
            input(type='submit', value='Login').bigButton

          form(method='get', action='register')
            input(type='submit', value='Register').bigButton

        div.rightBlock
          p.splashText Adipisicing pour-over id cred placeat ethical, distillery Shoreditch Carles laborum incididunt PBR bitters wayfarers irony.

      +userStub(Latest Scientist, false, true, false, ['Haskell'], ['Necromancy'])
      +userStub(Latest Developer, false, false, true, ['Haskell'], ['Necromancy'])

      div.push

    +footer()