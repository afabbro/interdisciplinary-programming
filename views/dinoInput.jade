doctype html5
html
  head

  body
    h1 Welcome, DinoFriend!

    form(method='post', action='dinoSubmit')
      label Name
        input(type='text', name='Name')

      label Fanciest Feature
      select(name='feature')
        option Spikes
        option Scales
        option Wings

      label Likes Robos who speak:
      select(name='wants')
        option Haskell
        option FORTRAN 77
        option Jade

      input(type='submit' value='Fossilize Record')